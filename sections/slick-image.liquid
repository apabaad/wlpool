<div class ="bbq-conf-container">
    <div class="page-width">
    <h2 class="text-center text-white" style="padding-top:20px;">Choose your configuration </h2>
    <div class="bbq-conf-size-btn">
        <div class="btn btn--tertiary btn--tertiary-cucine" data-slide="0">SMALL</div>
        <div class="btn btn--tertiary btn--tertiary-cucine" data-slide="1">MEDIUM</div>
        <div class="btn btn--tertiary btn--tertiary-cucine" data-slide="2">LARGE</div>
    </div>
    <div class = "bbq-conf-img">

        <div class="bbq-conf-img-item">
            {% for block in section.blocks %}
            {% if block.settings.item1-pointer-left and block.settings.item1-pointer-top != blank %}
            <div class="item-pointer" style="left:{{ block.settings.item1-pointer-left }}%; top:{{ block.settings.item1-pointer-top }}%;">
                <div class="item-card">
                    <div class="item-card-row">
                        <div class="item-image">
                            <img src="{{block.settings.item1-card-image | img_url: 'master' }}">
                        </div>
                        <div class="item-description">
                            <h3 class="item-title">{{ block.settings.item1-card-title  }}</h3>
                            <a href="{{ block.settings.item1-link }}" target="_blank">PRODUCT DETAIL</a>
                        </div>
                    </div>  
                </div>
            </div>
        {% endif %}
        {% endfor %}
            <img src="https://cdn.shopify.com/s/files/1/0647/3151/3071/files/small.png?v=1657842917">
        </div>

        <div class="bbq-conf-img-item">
            
            {% for block in section.blocks %}
                {% if block.settings.item2-pointer-left and block.settings.item2-pointer-top != blank %}
                <div class="item-pointer" style="left:{{ block.settings.item2-pointer-left }}%; top:{{ block.settings.item2-pointer-top }}%;">
                    <div class="item-card">
                        <div class="item-card-row">
                            <div class="item-image">
                                <img src="{{block.settings.item2-card-image | img_url: 'master' }}">
                            </div>
                            <div class="item-description">
                                <h3 class="item-title">{{ block.settings.item2-card-title  }}</h3>
                                <a href="{{ block.settings.item2-link }}" target="_blank">PRODUCT DETAIL</a>
                            </div>
                        </div>  
                    </div>
                </div>
            {% endif %}
            {% endfor %}
            <img src="https://cdn.shopify.com/s/files/1/0647/3151/3071/files/medium.jpg?v=1657842917">
        </div> 
        <div class="bbq-conf-img-item">

            {% for block in section.blocks %}
                {% if block.settings.item3-pointer-left and block.settings.item3-pointer-top != blank %}
                <div class="item-pointer" style="left:{{ block.settings.item3-pointer-left }}%; top:{{ block.settings.item3-pointer-top }}%;">
                    <div class="item-card" style="margin-left:{{ block.settings.last-pointer-margin }}vw">
                        <div class="item-card-row">
                            <div class="item-image">
                                <img src="{{block.settings.item3-card-image | img_url: 'master' }}">
                            </div>
                            <div class="item-description">
                                <h3 class="item-title">{{ block.settings.item3-card-title }}</h3>
                                <a href="{{ block.settings.item3-link }}" target="_blank">PRODUCT DETAIL</a>
                            </div>
                        </div>  
                    </div>
                </div>
            {% endif %}
            {% endfor %}
            <img src="https://cdn.shopify.com/s/files/1/0647/3151/3071/files/large.jpg?v=1657842917">
        </div> 
    </div>
</div>
</div>
         

