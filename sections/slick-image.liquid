       {% style %}

       .bbq-conf-container{
        background-color:#232323;
        margin-top:-20px;
        padding-bottom:2rem;
       }

       .bbq-conf-size-btn{
        display:flex;
        align-items:center;
        justify-content:center;
       }
       .btn--tertiary-cucine{
        color:white;
        margin:15px;
        padding:15px 40px;
       }

       .btn--tertiary-cucine:hover{
        color:black;
        background:white;
       }

       .bbq-conf-img-item{
        position:relative;
       }


       .item-pointer{
        background-color:#FF7063;
        height:15px;
        width:15px;
        border-radius:50%;
        position:absolute;  
        cursor:pointer;    
        -webkit-animation: blink 7s infinite;  
        -moz-animation: blink 5s infinite;  
        -o-animation: blink 5s infinite;  
        animation: blink 7s infinite;  
        border: 1px solid white;
        overflow:visible;
       }

       .item-pointer:hover .item-card{
        display:block;
       }

       .item-pointer:hover{
        -webkit-animation: none;  
        -moz-animation: none;  
        -o-animation: none;  
        animation: none;
        overflow:visible;
       }
        

       .item-card{
        display:none;
        background-color:white;
        width:400px;
        cursor:auto;
        position:absolute;
       margin-top:-16vh;
       margin-left:0.7vw;
       z-index:9999;
       border-radius:11px;
       overflow:visible !important;
       }

       .item-card-row{
        display:flex;
       }

       .item-image img {
        padding:14px 20px 30px 40px;
        width:190px;
       }

       .item-description {
        padding:60px 10px 40px 0;
       }

       .item-title{
        font-weight:bold;
       }

       .item-description a{
        color:red;
        text-decoration:underline;
       }

       
       .bbq-conf-img-item img {
         margin: 0 auto; 
    }

       @keyframes blink {
        0%{
            transform:scale(1.1);
        }
        25%{
            transform:scale(.65);
        }
        50%{
            transform:scale(1.1);
            }
        75%{
            transform:scale(.65);
             }
        100%{
            transform:scale(1.1);
        }
       }

    @media screen and (max-width:992px){
        
        .item-pointer{
       display:none;
       }

    @media screen and (max-width:600px){
        
        .btn--tertiary-cucine{
        padding:5px;
       }


    }

       {% endstyle %}


<script>

    $('.bbq-conf-img').slick({
        arrows: false,
        fade: false,
        slidesToShow: 1,
        speed:0,
        draggable:false,
        infinite: true
    });

    $('div[data-slide]').click(function() {
        var slideno = $(this).data('slide');
        console.log(slideno)
        $('.bbq-conf-img').slick('slickGoTo', slideno);
    });
        
</script>