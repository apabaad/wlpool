{%if product.metafields.custom.show_logo_section_below_video %}
<div class="page-width wlpool-logo-text-container">
    <div class="logo-item">
        <img class="logo-item-img" src="{{product.metafields.custom.image_for_section_below_video | img_url: 'master'}}" loading="lazy">
    </div>
    <div class="title-item">
        <h3>{{product.metafields.custom.title_for_section_under_video}}</h3>
    </div>
    <div class="description-item">
        {{product.metafields.custom.description_for_section_under_video}}
    </div>
</div>
{% endif %}


{% style %}

.wlpool-logo-text-container{
    margin-top:3rem;
    background-color:#f9f9f9;
}

.logo-item{
}

.logo-item-img{
    margin:auto;
    padding:2rem 0;
    max-width:150px;
}

.title-item{
    /* margin-top:2rem; */
    text-align:center;
}

.description-item{
    padding:0 6rem 3rem 6rem;
    text-align:center;
}

@media screen and (max-width:700px){
    .description-item{
    padding:1rem;
}
{% endstyle %}