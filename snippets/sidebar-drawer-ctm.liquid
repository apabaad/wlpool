<div id="FilterDrawer" class="drawer--left md:left-[-350px] md:!left-0">
  <div class="drawer__contents">
    <div class="drawer__fixed-header pl-8 md:!pl-0">
      <div class="drawer__header">
        <div class="h2 drawer__title">
          {{ 'collections.filters.title_tags' | t }}
        </div>
        <div class="drawer__close !block md:!hidden">
          <button type="button" class="drawer__close-button js-drawer-close 1">
            <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-close" viewBox="0 0 64 64"><path d="M19 17.61l27.12 27.13m0-27.12L19 44.74"/></svg>
            <span class="icon__fallback-text">{{ 'general.drawers.close_menu' | t }}</span>
          </button>
        </div>
      </div>
    </div>
    {%- assign animation_row = animation_row | plus: 1 -%}
    <div class="drawer__scrollable pl-8 md:!pl-0 !pt-0">
      {%- render 'collection-sidebar-filters', location: 'SidebarDrawer', section: section, collection: collection -%}
    </div>
  </div>
</div>